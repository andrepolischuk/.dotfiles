# Shell
alias sudo='sudo '
alias ..='cd ..;'
alias ...='.. ..'
alias ....='.. .. ..'
alias md='mkdir -p'
alias rf='rm -rf'
alias f='find . -name'
alias bed='pmset sleepnow'
alias path='echo -e ${PATH//:/\\n}'
alias run='open -a'

# Npm
alias ni='npm install'
alias nr='npm run'
alias ns='npm start'
alias nt='npm test'
alias nf='rm -rf node_modules && npm install'
alias nk='npm link'
alias nv='npm version'
alias no='npm outdated'
alias nu='npm uninstall'
alias nup='npm update'
alias nls='npm ls --depth 0'

# Git
alias ga='git add'
alias gb='git branch'
alias gc='git commit --patch --verbose'
alias gcl='git clone'
alias gco='git checkout'
alias gcp='git cherry-pick'
alias gcv='git cherry -v'
alias gd='git diff'
alias gl='git log --graph --oneline --all --decorate --date-order'
alias gm='git merge'
alias gn='git merge --no-ff --no-commit'
alias gp='git push'
alias gpl='git pull'
alias gr='git reset'
alias gs='git show'
alias gst='git status --short --branch'
alias gt='git tag --sort version:refname'
alias gbc='git branch --merged | sed "s/* master//g" | xargs -I % bash -c "git branch -d %; git push origin :%"'

# Tools
alias get='curl -O -L -#'
alias myip='curl -s https://4.ifcfg.me'
alias mylocalip='ifconfig | sed -En "s/127.0.0.1//;s/.*inet (addr:)?(([0-9]*\.){3}[0-9]*).*/\2/p"'
alias en='trans :en'
alias ru='trans :ru'
alias ag='ag --stats'
alias rand='date +%s | md5 | base64 | head -c 32'

# Apps
alias chromium='open -a Chromium'
alias chrome='open -a Google\ Chrome'
alias canary='open -a Google\ Chrome\ Canary'
alias safari='open -a Safari'
alias safaritech='open -a Safari\ Technology\ Preview'
alias firefox='open -a Firefox'
alias nightly='open -a Firefox\ Nightly'
alias yandex='open -a Yandex'
alias mail='open -a Mail'
alias notes='open -a Notes'
alias cal='open -a Calendar'
alias term='open -a iTerm'
alias telegram='open -a Telegram'
alias vm='VBoxManage startvm'

# Scripts
alias update="$DOTFILES/update.sh"
alias clean="$DOTFILES/clean.sh"
