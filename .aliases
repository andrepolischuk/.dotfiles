# Bin
alias a='atom'
alias git='hub'
alias ni='npm install'
alias nig='npm install --global'
alias nis='npm install --save'
alias nid='npm install --save-dev'

# Shell
alias ..='cd ..;'
alias ...='.. ..'
alias md='mkdir -p'

# Git
alias gpl='git pull'
alias gt='git tag'

gset() {
  unlink $HOME/.gitconfig
  if [ $1 ]
  then
    ln -s $HOME/.gitconfigs/$1 $HOME/.gitconfig
  else
    ln -s $HOME/.gitconfigs/default $HOME/.gitconfig
  fi
}
alias gset=gset
